<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Web Orders Tests">
<!--    suite represents a group of test cases e.g regression test suite-->

    <test name="UI Tests">
<!--  test represents a collection of test cases under a suite e.g UI tests under regression suite-->

        <classes>
<!--    class names should include package names if there are any-->
            <class name="tests.LoginTests">
                <methods>
<!--                    individual method with @Test annotation in a class-->
                    <include name="testLogin"/>
                </methods>
            </class>

            <class name="tests.LoginTests2">
                <methods>
                    <include name="testLogin4"/>
                </methods>
            </class>

        </classes>

    </test>

</suite>